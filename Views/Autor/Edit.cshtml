@model aspbiblio.Models.Autor

<div class="row">
  <div class="col-md-12 stretch-card">
    <div class="card">
      <div class="card-body">
        @using(Html.BeginForm("Update","Autor",FormMethod.Post)){ 
          <div class="form-group">
            <label for="name">Nom</label>
            <input type="text" class="form-control" name="name" id="name" value="@Html.DisplayFor(m => m.name)" placeholder="Name">
          </div>
            <div class="form-group">
              <label for="phone">Telephone</label>
              <input type="text" value="@Html.DisplayFor(m => m.phone)" class="form-control" name="phone" id="phone" placeholder="Phone">
              <input hidden type="text" value="@Html.DisplayFor(m => m.id)" class="form-control" name="id" id="id" placeholder="ID">
          </div>
          <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
        }
      </div>
    </div>
  </div>
</div>