<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                @*Debut du formulaire en utilisant le type Get 
                pour l'envoie des donnees au controller 
                ici Save represente la methode qui se chargera d'enregistrer
                les donnees dans le controller Roles
                *@
                @using(Html.BeginForm("Save","Autor",FormMethod.Get)){ 
                    <div class="form-group">
                        <label for="name">Nom de L'Auteur</label>
                        <input type="text" name="name" class="form-control" id="name" placeholder="Nom De L'Auteur">
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone</label>
                        <input type="text" name="phone" class="form-control" id="phone"  placeholder="Phone">
                    </div>  
                    <button type="submit" class="btn btn-primary mr-2">Enregistrer</button>
                } 
            </div>
        </div>
    </div>
</div>