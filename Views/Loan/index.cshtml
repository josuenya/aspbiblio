@model IEnumerable<aspbiblio.Models.Loan>
<div class="row">
            <div class="col-md-12 stretch-card">
              <div class="card">
                <div class="card-body">
                  <a asp-action="Create" class="btn btn-primary"> <span><i class="mdi mdi-plus"></i></span>Ajouter Un Nouveau Emprunt</a>
                  <div class="table-responsive">
                    <table id="recent-purchases-listing" class="table">
                      <thead>
                        <tr>
                            <th>Nom</th> 
                            <th>Books</th>
                            <th>Status</th>
                            <th>Date de retour</th>
                            <th>Date d'emprunt</th>
                            <th>Modifier le:</th>
                            <th>Action</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model) {
                              <tr>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.users_name)
                                  </td>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.libelle)
                                  </td>
                                  <td>
                                      <label class="badge badge-warning">@Html.DisplayFor(modelItem => item.status)</label> 
                                  </td>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.return_date)
                                  </td>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.created_at)
                                  </td>
                                  <td>
                                      @Html.DisplayFor(modelItem => item.updated_at)
                                  </td>
                                  <td>
                                    <a asp-action="Edit" asp-route-id="@item.id"><span><i class=" mdi mdi-border-color btn btn-primary "></i></span></a>
                                    <a asp-action="Delete" asp-route-id="@item.id"><span><i class="mdi mdi-delete btn btn-danger "></i></span></a>
                                </td>
                              </tr>
                          }
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
