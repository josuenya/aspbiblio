<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>@ViewData["Title"]</title>
  <!-- plugins:css -->
  <link rel="stylesheet" href="~/vendors/mdi/css/materialdesignicons.min.css">
  <link rel="stylesheet" href="~/vendors/base/vendor.bundle.base.css">
  <!-- endinject -->
  <!-- plugin css for this page -->
  <link rel="stylesheet" href="~/vendors/datatables.net-bs4/dataTables.bootstrap4.css">
  <!-- End plugin css for this page -->
  <!-- inject:css -->
  <link rel="stylesheet" href="~/css/site.css">
  <!-- endinject -->
  <link rel="shortcut icon" href="images/favicon.png" />
</head>
<body>
  <div class="container-scroller">
    <!-- partial:partials/_navbar.html -->
    <nav class="navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
      <div class="navbar-brand-wrapper d-flex justify-content-center">
        <div class="navbar-brand-inner-wrapper d-flex justify-content-between align-items-center w-100">  
          <a class="navbar-brand brand-logo" asp-controller="Home" asp-action="Index"><img src="~/img/Logopit_1611150713914.png" style="height:60px !important" Width="20" Height="80" alt="logo"></a>
          <a class="navbar-brand brand-logo-mini" asp-controller="Home" asp-action="Index"><img src="~/img/Logopit_1611150713914.png" Width="20" Height="80" alt="logo"></a>
          <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
            <span class="mdi mdi-sort-variant"></span>
          </button>
        </div>  
      </div>
      <div class="navbar-menu-wrapper d-flex align-items-center justify-content-end">
        <ul class="navbar-nav mr-lg-4 w-100">
          <li class="nav-item nav-search d-none d-lg-block w-100">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text" id="search">
                  <i class="mdi mdi-magnify"></i>
                </span>
              </div>
              <input type="text" class="form-control" placeholder="Search now" aria-label="search" aria-describedby="search">
            </div>
          </li>
        </ul>
        <ul class="navbar-nav navbar-nav-right">
          <li class="nav-item nav-profile dropdown">
            <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="profileDropdown">
              @* <span class="nav-profile-name"> @User.Identity.Name!</span> *@
            </a>
            <div class="dropdown-menu dropdown-menu-right navbar-dropdown" aria-labelledby="profileDropdown">
              <a class="dropdown-item">
                <i class="mdi mdi-logout text-primary"></i>
              <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
              </a>
            </div>
          </li>
        </ul>
        <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
          <span class="mdi mdi-menu"></span>
        </button>
      </div>
    </nav>
    <!-- partial -->
    <div class="container-fluid page-body-wrapper">
      <!-- partial:partials/_sidebar.html -->
      <nav class="sidebar sidebar-offcanvas" id="sidebar">
        <ul class="nav">
          <li class="nav-item">
            <a class="nav-link" asp-controller="Home" asp-action="Index"> 
              <i class="mdi mdi-home menu-icon"></i>
              <span class="menu-title">Dashboard</span> 
            </a>
          </li>

          <li class="nav-item">
            <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
              <i class=" mdi mdi-account-multiple menu-icon"></i>
              <span class="menu-title">Gestion Utilisateurs</span>
              <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-basic">
              <ul class="nav flex-column sub-menu">
                <li class="nav-item"> <a class="nav-link" asp-controller="Users" asp-action="Index">Utilisateurs</a></li>
                <li class="nav-item"> <a class="nav-link" asp-controller="Roles" asp-action="Index">Roles</a></li>
              </ul>
            </div>
          </li>

          <li class="nav-item">
            <a class="nav-link" data-toggle="collapse" href="#ui-basic" aria-expanded="false" aria-controls="ui-basic">
              <i class="mdi mdi-plus menu-icon"></i>
              <span class="menu-title">Gestion Emprunts</span>
              <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="ui-basic">
              <ul class="nav flex-column sub-menu">
                <li class="nav-item"> <a class="nav-link" asp-controller="Loan" asp-action="Index">Mes Emprunts</a></li>
                <li class="nav-item"> <a class="nav-link" asp-controller="Loan" asp-action="Create">Nouveau Emprunt</a></li>
              </ul>
            </div>
          </li>

          <li class="nav-item">
            <a class="nav-link" data-toggle="collapse" href="#achat" aria-expanded="false" aria-controls="achat">
              <i class="mdi mdi-cart menu-icon"></i>
              <span class="menu-title">Gestion des Livres</span>
              <i class="menu-arrow"></i>
            </a>
            <div class="collapse" id="achat">
              <ul class="nav flex-column sub-menu">
                <li class="nav-item"> <a class="nav-link" asp-controller="Books" asp-action="Index">Livres</a></li>
                <li class="nav-item"> <a class="nav-link" asp-controller="Autor" asp-action="Index">Auteurs</a></li>
                <li class="nav-item"> <a class="nav-link" asp-controller="Editor" asp-action="Index">Editeurs</a></li>

                <li class="nav-item"> <a class="nav-link" asp-controller="Purcharse" asp-action="Index">Mes Achats</a></li>
                <li class="nav-item"> <a class="nav-link" >Nouveau Achats</a></li>
              </ul>
            </div>
          </li> 
@* <?=(isset($page) && $page == 'Produits') ? 'active' : 'hidden'?> *@
          <li class="nav-item">
            <a class="nav-link hidden " asp-controller="Books" asp-action="catalogue">                
              <i class="mdi mdi-book-open-page-variant menu-icon"></i>
              <span class="menu-title">Consulter le Catalogue</span>
            </a>
          </li> 

        </ul>
      </nav>
      <!-- partial -->
      <div class="main-panel">
        <div class="content-wrapper">          
          <div class="row">
            <div class="col-md-12 grid-margin">
              <div class="d-flex justify-content-between flex-wrap">
                <div class="d-flex align-items-end flex-wrap">
                  <div class="mr-md-3 mr-xl-5">
                    <h2>Bienvenu dans votre application</h2>
                    @* <p class="mb-md-0">Your analytics dashboard template.</p> *@
                  </div>
                  <div class="d-flex">
                    <i class="mdi mdi-home text-muted hover-cursor"></i>
                    <p class="text-muted mb-0 hover-cursor">&nbsp;/&nbsp;Dashboard&nbsp;/@ViewBag.Title &nbsp;</p>
                    @* <p class="text-primary mb-0 hover-cursor">Analytics</p> *@
                  </div>
                </div>                
              </div>
            </div>
          </div>          
            @RenderBody()  
          
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->
        <footer class="footer">
          <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Copyright © BOOKSTORE - @DateTime.Now.Year</span>
            </div>
        </footer>
        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->

  <!-- plugins:js -->
  <script src="~/vendors/base/vendor.bundle.base.js"></script>
  <!-- endinject -->
  <!-- Plugin js for this page-->
  <script src="~/vendors/chart.js/Chart.min.js"></script>
  <script src="~/vendors/datatables.net/jquery.dataTables.js"></script>
  <script src="~/vendors/datatables.net-bs4/dataTables.bootstrap4.js"></script>
  <!-- End plugin js for this page-->
  <!-- inject:js -->
  <script src="~/js/off-canvas.js"></script>
  <script src="~/js/hoverable-collapse.js"></script>
  <script src="~/js/template.js"></script>
  <!-- endinject -->
  <!-- Custom js for this page-->
  <script src="~/js/dashboard.js"></script>
  <script src="~/js/data-table.js"></script>
  <script src="~/js/jquery.dataTables.js"></script>
  <script src="~/js/dataTables.bootstrap4.js"></script>
  <!-- End custom js for this page-->
  <script src="~/js/jquery.cookie.js" type="text/javascript"></script>
    @* @await RenderSectionAsync("Scripts", required: false) *@

</body>

</html>